{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  "resolveJsonModule": true
  },
  "include": [
    "src/index.ts",
    "src/utils/data-source.ts"
  ],
  "exclude": ["node_modules", "dist"]
}